<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="../static/js/function.js"></script>
    <title>注册</title>
</head>
<body>
<script>
    function zhuce(){
        let data=submit('/zhuce',`name=${document.getElementById('name').value}&pas=${document.getElementById('pas').value}`)
            console.log(data)
    }
window.onload=function () {
    document.getElementById('name').onblur=function () {
        document.getElementById('no').style.display='none'
        document.getElementById('ok').style.display='none'
        let data=submit('/checkname',`name=${document.getElementById('name').value}`)
        if (Boolean(data[0])) {
            document.getElementById('no').style.display='block'
        }else{
            document.getElementById('ok').style.display='block'
        }
    }
}
</script>
<div>
    <h3>注册</h3>
    name:<input type="text" name="name" id="name"><span id="ok" style="display:none;color:blue;">ok</span><span id="no" style="display:none;color:#f00000;">no</span><br>
    password:<input type="password" name="pas" id="pas"><br>
    确认密码:<input type="password" name="qpas">
    <input type="button" onclick="zhuce()" value="确定">
</div>

</body>
</html>